---
import Layout from "../components/layout/layout.astro";
---

<Layout
  header
  title="David von Garrel"
>
  <main class="flex flex-col pt-16">
    <img
      alt="david"
      class="flex absolute right-0 top-5 h-40 md:hidden"
      src="/david_small.png"
    />

    <section class="flex text-5xl justify-center pt-20 items-center">
      <h1
        class="font-bold text-left px-10 max-w-4xl animate-in fade-in duration-1000"
      >
        I'm <span class="text-blue-600">David</span>. I will create a design
        that can give value to your business.
      </h1>
    </section>

    <img
      alt="david"
      class="absolute hidden md:flex md:right-0 md:h-96 md:top-28 -z-10"
      src="/david_big.png"
    />

    <section class="w-full bg-blue-950 text-white mt-40 pb-40 h-full">
      <div
        class="flex flex-col space-y-12 px-10 mt-12 items-center md:space-y-0 md:flex-row md:space-x-32 justify-center animate-in fade-in duration-1000"
      >
        <div class="flex flex-col items-center md:flex-row">
          <svg
            class="w-12 h-12 md:w-16 md:h-16"
            fill="#FFFFFF"
