---
import Layout from "../components/layout/layout.astro";
---

<Layout
  header
  title="Page not Found"
>
  <main
    class="flex items-center justify-center h-[80vh] animate-in fade-in duration-1000"
  >
    <div class="mx-10 text-left">
      <h1 class="text-4xl font-bold">Page not Found</h1>
      <p class="my-3 text-xl"
        >Sorry, we couldn't find the page you were looking for.</p
      >
      <a
        class="text-xl font-semibold opacity-80 hover:opacity-100"
        href="/"
        >Go back to the home page</a
      >
    </div>
  </main>
</Layout>
