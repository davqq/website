---
import Layout from "../components/layout/layout.astro";
---

<Layout
  footer={false}
  header
  showNavbar={false}
  title="Page not Found"
>
  <main
    class="flex min-h-screen animate-fade-down flex-col items-center justify-center duration-1000"
  >
    <section class="flex w-full max-w-4xl flex-col px-10">
      <h1 class="text-3xl">Page not Found</h1>
      <p class="my-3">Sorry, we couldn't find the page you were looking for.</p>
      <a
        class="font-roboto-light text-xl underline decoration-gray-400 decoration-from-font underline-offset-4 duration-500 hover:decoration-black"
        href="/"
        >Go back to the home page</a
      >
    </section>
  </main>
</Layout>
